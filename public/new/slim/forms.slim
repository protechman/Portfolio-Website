            form.material-form
              .row
                .form-group.col-sm-6.col-xs-12
                  input.form-control id="full-name" aria-describedby="fullName" type="text" required="true"
                  label.float-label.pl-3 for="full-name" Full Name
                .form-group.col-sm-6.col-xs-12
                  input.form-control id="phone" aria-describedby="phoneNumber" type="text" required="true"
                  label.float-label.pl-3 for="phone" Phone Number

            form.material-form
              .row
                .form-group.col-sm-6.col-xs-12
                  select.form-control.text-gray
                    option value="" disabled="disabled" selected="selected" City
                    option New York City
                    option Chicago
                    option Miami
                .form-group.col-sm-6.col-xs-12
                  select.form-control.text-gray
                    option value="" disabled="disabled" selected="selected" State
                    option New York
                    option California
                    option Florida
            form.material-form
              .row
                .form-group.col-12
                  input.form-control id="address" aria-describedby="Address" type="text" required="true"
                  label.float-label.pl-3 for="address" Address

            label.custom-control.custom-checkbox.mt-3
              input.custom-control-input type="checkbox" /
              span.custom-control-indicator
              span.custom-control-description.text-gray Notify me about the order status via SMS

            .my-3.float-right
              button.btn.btn-white.btn-lg.m-2.btn-width1.text-gray type="submit" Go back
              button.btn.btn-rainbow-primary.btn-lg.m-2.btn-width1 type="submit" Continue
