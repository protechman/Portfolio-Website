    / Form 1
    .rainbow-form.rainbow-form-1
      .blue-shade
      .form-content.container.d-flex.flex-column
        .form-top
          h2.fw-light Get in touch
          p.fw-regular Do you have an awesome project for us, or just want to say hi? Go right ahead!
        .card
          .card-block
            .row
              .col-xs-12.col-sm-7
                h4.fw-medium Send us a message
                form.material-form
                  .form-group
                    input.form-control id="name" aria-describedby="nameHelp" type="text" required="true"
                    label.float-label for="name" Name
                  .form-group
                    input.form-control id="subject" aria-describedby="subjectHelp" type="text" required="true"
                    label.float-label for="subject" Subject
                  .form-group
                    textarea.form-control id="message" rows="4" required="true"
                    label.float-label for="message" Message
                  button.btn.btn-md.btn-rainbow-info.px-5 type="submit" Send
              .col-xs-12.col-sm-4.offset-sm-1.aligh-items-center
                h4.fw-medium.mt-5.mt-lg-0 Contact info
                ul.list-unstyled.mt-5
                  li
                    img.m-1 width="20" src="images/icons/location-flat.svg"
                    ' 8755 Bergnaum Fort
                  li
                    img.m-1 width="20" src="images/icons/mail-flat.svg"
                    ' info@rainbowui.com
                  li
                    img.m-1 width="20" src="images/icons/phone-flat.svg"
                    ' (+40) 750 888 444
        .row.justify-content-center
          .col-12.col-md-auto
            div.m-5
              a.mx-2 href="#"
                img title="facebook" height="20" src="images/icons/facebook.svg"
              a.mx-2 href="#"
                img title="googleplus" height="20" src="images/icons/googleplus.svg"
              a.mx-2 href="#"
                img title="twitter" height="20" src="images/icons/twitter.svg"
              a.mx-2 href="#"
                img title="instagram" height="20" src="images/icons/instagram.svg"
